<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>userLogin</servlet-name>
    <servlet-class>controller.userLogin.UserLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userLogin</servlet-name>
    <url-pattern>/Elearning/include/login.hrd</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>userRegister</servlet-name>
    <servlet-class>controller.user.AddUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userRegister</servlet-name>
    <url-pattern>/Elearning/include/Add.hrd</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>permission</filter-name>
    <filter-class>controller.userLogin.Authentication</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>permission</filter-name>
    <url-pattern>/Admin/*</url-pattern>
  </filter-mapping>
</web-app>