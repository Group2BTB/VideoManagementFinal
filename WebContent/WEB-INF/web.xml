<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.userLogin.UserLogin</servlet-class>
  </servlet>
  <filter>
  	<filter-name>Authentication</filter-name>
  	<filter-class>controller.userLogin.Authentication</filter-class>
  </filter>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Elearning/login</url-pattern>
  </servlet-mapping>
  <filter-mapping>
  	<filter-name>Authentication</filter-name>
  	<url-pattern>/VideoManagement/Elearning/*</url-pattern>
  </filter-mapping>
</web-app>