<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>userLogin</servlet-name>
		<servlet-class>controller.userLogin.UserLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userLogin</servlet-name>
		<url-pattern>/Elearning/include/login</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>permission</filter-name>
		<filter-class>controller.userLogin.Authentication</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>permission</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
</web-app>